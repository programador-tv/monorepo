@using Domain.Enums

@model FormsOneToOne

<div
  class="modal fade eventModal"
  id="eventModalOneToOne"
  tabindex="-1"
  aria-labelledby="eventModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <form id="saveTimeForm" method="post">
      <div class="modal-content">
        <div class="modal-body">
          <!-- One -->
          <div class="modal-select active body-oneToOne-1">
            <div class="modalTitleHeaderDiv">
              <h5 class="modal-title modalTitleHeader" id="eventModalLabel">
                Criação de Colaboração 1:1
              </h5>
            </div>
            <div class="progressOneToOne">
              <div class="progressBall">
                <img src="~/Pictures/Icons/checkModalIcon.svg" alt="check icon" />
              </div>
              <div class="progressRectangle"></div>
              <div class="progressBallNext">2</div>
              <div class="progressRectangle"></div>
              <div class="progressBallNext">3</div>
            </div>
            <div class="progressOneToOneText">
              <div class="progressTextBox">
                <p class="progressText">Titulo e Descrição</p>
              </div>
              <div class="progressTextBox">
                <p class="progressText">Data e Hora</p>
              </div>
              <div class="progressTextBox">
                <p class="progressText">Concluir</p>
              </div>
            </div>
            <div
              class="tab-pane active"
              id="timeTab"
              role="tabpanel"
              aria-labelledby="home-tab"
            >
              <input
                type="hidden"
                asp-for="ScheduleTimeSelection.Variacao"
                value="@Variacao.OneToOne"
              />
              <div class="form-group form-group-modal">
                <strong class="oneToOneTextHeader">
                  Escolha seu titulo e suas tags de acordo com o assunto que
                  deseja.
                </strong>
                <div class="modal-input-padding">
                  <div id="TituloMentoria">
                    <label
                      asp-for="ScheduleTimeSelection.Titulo"
                      class="control-label oneToOneLabel"
                    >
                      Título da Sessão
                      <span style="color: firebrick">*</span>
                    </label>
                    <input
                      id="TimeSelectionMentoriaTitulo"
                      asp-for="ScheduleTimeSelection.Titulo"
                      class="form-control one-to-one-input"
                    />
                  </div>
                  <label
                    asp-for="ScheduleTimeSelection.TagsSelected"
                    class="control-label oneToOneLabel"
                  >
                    Tags
                    <span style="color: firebrick">*</span>
                  </label>
                  <select
                    multiple="multiple"
                    asp-for="ScheduleTimeSelection.TagsSelected"
                    class="form-control isSelect2"
                    required
                    id="TagsSelected"
                  >
                    @foreach (var item in Model.RelatioTags) {
                    <optgroup label="@item.Key">
                      @foreach (var subItem in Model.RelatioTags[item.Key]) {
                      <option value="@subItem">@subItem</option>
                      }
                    </optgroup>
                    }
                  </select>
                  <div id="selected-tags-container"></div>
                </div>
                <div style="text-align: end">
                  <button
                    id="btnOneToOne1"
                    type="button"
                    class="btn btn-modal-first oneToOneButton action btn-avancar"
                  >
                    Definir Data e Hora
                  </button>
                </div>
              </div>
              <input
                type="hidden"
                asp-for="ScheduleTimeSelection.Tipo"
                value="@EnumTipoTimeSelection.FreeTime"
              />

              <br />
            </div>
          </div>

          <!-- Two -->
          <div class="modal-select body-oneToOne-2">
            <div class="modalTitleHeaderDiv">
              <h5 class="modal-title modalTitleHeader" id="eventModalLabel">
                Criação de Colaboração 1:1
              </h5>
            </div>
            <div class="progressOneToOne">
              <div class="progressBall" style="color: #fff">1</div>
              <div class="progressRectangle"></div>
              <div class="progressBall">
                <img src="~/Pictures/Icons/checkModalIcon.svg" alt="check icon" />
              </div>
              <div class="progressRectangle"></div>
              <div class="progressBallNext">3</div>
            </div>
            <div class="progressOneToOneText">
              <div class="progressTextBox">
                <p class="progressText">Titulo e Descrição</p>
              </div>
              <div class="progressTextBox">
                <p class="progressText">Data e Hora</p>
              </div>
              <div class="progressTextBox">
                <p class="progressText">Concluir</p>
              </div>
            </div>
            <div class="datePickerFlexDiv">
              <div class="datePickerFlexItem">
                <h2 style="font-size: 16px">
                  Escolha o horario e a data que se encontra disponível
                </h2>
              </div>
              <div class="datePickerFlexItem">
                <div class="date-picker date-input-div">
                  <div class="text-container">
                    <p class="time-picker-text">Data 
                      <span style="color: firebrick">*</span>
                    </p>
                    <div
                      style="margin-top: 28px"
                      class="alert-below-input"
                      id="errorMsgDate"
                    ></div>
                  </div>
                  <input
                    type="date"
                    class="dateTime-newPicker"
                    id="dateTime"
                  />
                </div>
                <div class="date-input-div">
                  <label class="time-picker-text">Horário de Início
                      <span style="color: firebrick">*</span>
                  </label>
                  <input
                    type="time"
                    class="startLive"
                    style="width: 100%; text-align: center"
                    id="startTime"
                    asp-for="ScheduleTimeSelection.StartTime"
                  />
                  <div class="alert-below-input" id="errorMsgTime"></div>
                </div>
                <div class="date-input-div">
                  <label class="time-picker-text">Horário de Término
                      <span style="color: firebrick">*</span>
                  </label>
                  <input
                    type="time"
                    class="endLive"
                    style="width: 100%; text-align: center"
                    id="endTime"
                    asp-for="ScheduleTimeSelection.EndTime"
                  />
                </div>
                <div class="alert-below-input" id="errorMsg"></div>
              </div>
            </div>
            <div style="margin-top: 0" class="btn-conferir-informacao">
              <button id="btnBack1" type="button" class="btn btn-voltar action">
                Voltar Etapa
              </button>
              <button
                id="btnOneToOne2"
                type="button"
                class="btn btn-avancar oneToOneButton action"
              >
                Conferir Informações
              </button>
            </div>
          </div>

          <!-- Three -->
          <div class="modal-select body-oneToOne-3">
            <div class="modalTitleHeaderDiv">
              <h5 class="modal-title modalTitleHeader" id="eventModalLabel">
                Criação de Colaboração 1:1
              </h5>
            </div>
            <div class="progressOneToOne">
              <div class="progressBall">1</div>
              <div class="progressRectangle"></div>
              <div class="progressBall">2</div>
              <div class="progressRectangle"></div>
              <div class="progressBall">
                <img src="~/Pictures/Icons/checkModalIcon.svg" alt="check icon" />
              </div>
            </div>
            <div class="progressOneToOneText">
              <div class="progressTextBox">
                <p class="progressText">Titulo e Descrição</p>
              </div>
              <div class="progressTextBox">
                <p class="progressText">Data e Hora</p>
              </div>
              <div class="progressTextBox">
                <p class="progressText">Concluir</p>
              </div>
            </div>
            <div
              class="tab-pane active"
              id="timeTab3"
              role="tabpanel"
              aria-labelledby="home-tab"
            >
              <div class="conferir-info-header">
                Conferir todas as informações
              </div>
              <div class="conferir-info-modal">
                <p class="conferir-info-titulo" id="tituloResumo"></p>
                <p class="resumo-one-to-one">
                  <span>
                    <span class="material-symbols-outlined" style="font-size: 14px;
  margin-right: 5px;">
                    calendar_today
                    </span>
                    <span id="dia-resumo" class="resumo-span"></span>
                  </span>
                  <span>
                    <span class="material-symbols-outlined" style="font-size: 14px;
  margin-right: 5px;">
                    schedule
                    </span>
                  <span id="horarios-resumo"></span>
                  </span>
                  
                </p>
                <div class="modal-tags" id="modal-tags">
                  
                </div>
              </div>
              <div class="btn-criar-modal">
                <button
                  id="btnBack2"
                  type="button"
                  class="btn btn-voltar action"
                >
                  Voltar Etapa
                </button>
                <button
                  id="btnOneToOne3"
                  type="submit"
                  class="btn oneToOneButton action btn-avancar"
                >
                  Criar Sessão
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>

     <script src="~/js/OneToOneEvent/ValidacaoOneToOne.js" asp-append-version="true"></script>
     <script>
      
     </script>
</div>
