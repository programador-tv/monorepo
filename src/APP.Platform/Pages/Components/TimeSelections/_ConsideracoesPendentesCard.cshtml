@using Models
@model ConsideracoesPendentesCardPageModel

<div id="card-@Model.Id"
 class="list-item box-shaddow-side-cards" style="display: flex; flex-direction: column; align-items: flex-start; padding: 10px; border-top: 1em solid rgb(255, 193, 7); border-radius: 1em; margin: 1em 0.5em">

  <h3 class="list-item-title" style="font-size: 16px; font-weight: bold; align-self: center;">@Model.Titulo</h3>
    <div class="elements-card-events">
      <div class="name-photo-card-events">
         @await Html.PartialAsync("Components/_PerfilAvatar",
            new _PerfilAvatar{
                Perfil = new Domain.Entities.Perfil{
                    Nome = Model.NomeEnvolvido,
                    Foto = Model.FotoEnvolvido,
                    UserName = Model.UserName
                    },
                WithLink = true
            })
            <p class="list-item-category" style="font-size: 1em; font-weight: bold; margin: 0px;">@Model.NomeEnvolvido</p>
      </div>
    <button data-bs-toggle="modal" data-bs-target="#eventModal-@Model.Id" class="button action" style="margin-top: 0.5em;">Detalhes</button>
 </div>
</div>
